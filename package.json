{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "InventiStudio <hello@inventi.studio>",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.js --exec babel-node",
    "debug": "NODE_ENV=development nodemon src/index.js --exec babel-node --source-maps=inline --retainLines=true --inspect=5858",
    "build": "rm -rf build && NODE_ENV=production babel src -d build",
    "start": "NODE_ENV=production node build/index.js",
    "db": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize $*",
    "db:init": "./tasks/db-init.sh",
    "db:seed:dev": "NODE_ENV=development babel-node tasks/db-seed.js",
    "db:seed:prod": "NODE_ENV=production babel-node tasks/db-seed.js",
    "db:seed:all": "yarn db:seed:dev && yarn db:seed:prod",
    "db:migrate:dev": "NODE_ENV=development yarn db db:migrate",
    "db:migrate:test": "NODE_ENV=test yarn db db:migrate",
    "db:migrate:prod": "NODE_ENV=production yarn db db:migrate",
    "db:migrate:all": "yarn db:migrate:dev && yarn db:migrate:test && yarn db:migrate:prod",
    "db:clean:dev": "NODE_ENV=development babel-node ./node_modules/.bin/run-func tasks/db-clean.js cli",
    "db:clean:prod": "NODE_ENV=production babel-node ./node_modules/.bin/run-func tasks/db-clean.js cli",
    "db:clean:test": "NODE_ENV=test babel-node ./node_modules/.bin/run-func tasks/db-clean.js cli",
    "db:clean:all": "yarn db:clean:dev && yarn db:clean:test && yarn db:clean:prod",
    "lint": "eslint src test",
    "test": "NODE_ENV=test BABEL_ENV=test mocha",
    "docker": "./deploy/docker.sh",
    "deploy": "./deploy/deploy.sh",
    "postinstall": "./deploy/deps.sh && yarn secret:config && yarn secret:deploy",
    "secret:config": "test ! -f 'config/secrets.json' && cp config/secrets.json.template config/secrets.json || echo 'Secrets exists.'",
    "secret:deploy": "test ! -f 'deploy/config.env' && cp deploy/config.env.template deploy/config.env || echo 'Deploy config exists.'",
    "docs:code": "jsdoc2md --plugin dmd-bitbucket --configure .jsdoc src/**/*.js > .docs/documentation.md",
    "docs:api": "apidoc -i src/controllers/ -o .temp/ && apidoc-markdown2 -p .temp/ -o .docs/endpoints.md && rm -rf .temp",
    "docs": "yarn docs:code && yarn docs:api"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.1.2",
    "dotenv": "^4.0.0",
    "faker": "^4.1.0",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-json-error": "^3.1.2",
    "koa-mount": "^3.0.0",
    "koa-qs": "^2.0.0",
    "koa-request-logger": "^1.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "later": "^1.2.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-emoji": "^1.5.1",
    "nodemailer": "^4.1.0",
    "nodemailer-sparkpost-transport": "^2.0.0",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "pg-parse-float": "^0.0.1",
    "schema-inspector": "^1.6.8",
    "sequelize": "^4.2.0",
    "sha1": "^1.1.1",
    "slug": "^0.9.1",
    "validate.js": "^0.11.1"
  },
  "devDependencies": {
    "@textpress/babel-plugin-root-import": "^5.1.2",
    "apidoc": "^0.17.6",
    "apidoc-markdown2": "^0.3.5",
    "babel": "^6.5.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.14.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-register": "^6.14.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^0.7.1",
    "dirty-chai": "^2.0.0",
    "dmd-bitbucket": "^0.1.10",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "jsdoc": "^3.5.5",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.4.2",
    "mocha-prepare": "^0.0.2",
    "nodemon": "^1.11.0",
    "run-func": "^1.0.2",
    "sequelize-cli": "^2.7.0",
    "supertest": "^3.0.0"
  }
}
